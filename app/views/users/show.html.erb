<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info bg-light rounded p-4">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <div class="stats">
        <%= render 'shared/stats' %>
      </div>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>投稿数 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, previous_label: '< 前へ', next_label: '次へ >' %>
    <% end %>
  </div>
</div>