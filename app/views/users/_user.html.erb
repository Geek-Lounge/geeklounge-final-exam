<li class="shadow mb-3 w-30 center">
  <%= link_to user do%>
    <%= gravatar_for user, size: 50 %>
    <h3><%= user.name %></h3>
  <% end %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "（削除する）", user, data: { "turbo-method": :delete,
                                              turbo_confirm: "本当に削除しますか?" } %>
  <% end %>
</li>