<% if logged_in? %>
  <div class="row pt-3">
  <div class="col-md-8 offset-md-2">
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts, previous_label: '< 前へ', next_label: '次へ >' %>
  </div>
</div>
<% else %>
<div class="center jumbotron">
  <h1>Sample App</h1>
  <h2>
    このページは、<a href="https://geek-lounge.com/">GeekLounge</a>の学習チュートリアルで作られました。
  </h2>

  <%= link_to "新規登録はこちら", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>